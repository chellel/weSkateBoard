/* pages/topic/answers/answers.wxss */
@import "../../../templates/wePanel/wePanel.wxss";

.corner-icon {
  position: fixed;
  bottom: 80rpx;
  right: 0;
  width: 40px;
  height: 40px;
  background: #fff;
  box-shadow: -4px 3px 10px 2px rgba(26, 26, 26, 0.1);
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #0084ff;
}

.corner-icon:active {
  opacity: 0.6;
}

.corner-icon .iconfont {
  font-size: 24px;
}

.corner-icon-conttent{
  opacity: 0;
  transform: translateY(10);
}

.move {
  pointer-events: none;
  height: 100%;
  width: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
}

.show{
      transition: height .2s ease;
}


.animated {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
@keyframes fadeInUp {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}
