/* pages/topic/questions/questions.wxss */
@import "/templates/wePanel/wePanel.wxss";
@import "/components/dxTabPanel/dxTabPanel.wxss";

.weui-narbar {
  display: flex;
justify-content: center;
position: fixed;
z-index: 100;
background: #fff;
width: 100%;
  transition: transform .5s;
}
.weui-narbar.is-hidden{
   transform: translateY(-100%);
}
.weui-narbar__button {
  width: 100px;
  height: 30px;
  line-height: 30px;
  border-radius:0 ;
  border: solid 1px #ed1b24;
color: #ed1b24;
background: none;
margin: 0;
font-size: 14px;

}
.weui-narbar__button:first-child{
  border-right:0;
}
.weui-narbar__button:active,.weui-narbar__button__active{
background:#ed1b24;
color: #fff; 
}
.weui-narbar__button:active{
opacity: 0.6;

}

.weui-narbar__button::after {
  border: none;
}


.weui-panel__bd .weui-media-box__title,.weui-panel__bd .weui-media-box__desc{
  text-align:left;

}

