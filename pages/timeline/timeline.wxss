.left {
  border-left: 1px #eee solid;
  margin-left: 20px;
}

.right {
  border-left: 1px #eee solid;
  margin-left: 20px;
  float: left;
}

#timeline {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.hrLine {
  margin-top: 72px;
}



.issues {
  /* width: 800px; */
  height: 300px;
  overflow: hidden;
  text-align: center;
}

.issues li {
  width: 100%;
  list-style: none;
  float: left;
  position: relative;
}

.timeline {
  position: relative;
}

.timeline > button {
  position: absolute;
  border: 0;
  outline: none;
  top: 10px;
  z-index: 9999;
}

.timeline > button > i {
  display: block;
  height: 40px;
  width: 40px;
}

.timeline > button  > i > img {
  float: left;
  width: 100%;
}

.prev {
  left: 0;
}

.next {
  right: 0;
}

.dates {
  position: absolute;
  top: 0;
  z-index: 999;
}

.wrap {
  overflow: hidden;
}

.issues > li > view {
  width: 100%;
  display: block;
  position: relative;
}

.issues > li > view.left {
  height: 20px;
}

.issues > li .right > h5 {
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
  text-align: left;
  padding-left: 50px;
  font-size: 14px;
  position: absolute;
  left: -12px;
  z-index: 9;
}

.issues > li .right .textArea {
  display: block;
  margin: 30px 40px 10px 40px;
  padding: 12px;
  background: #4f96f5;
  color: #fff;
  border-top-left-radius: 0;
  border-top-right-radius: 12px;
  border-bottom-right-radius: 12px;
  border-bottom-left-radius: 12px;
  float: left;
  text-align: left;
}

.issues > li .left .textArea {
  display: block;
  margin: 50px;
  padding: 20px;
  background: #4f96f5;
  color: #fff;
  border-top-left-radius: 12px;
  border-top-right-radius: 0;
  border-bottom-right-radius: 12px;
  border-bottom-left-radius: 12px;
}

.issues > li .left .yearLine {
  position: absolute;
  width: 30px;
  height: 1px;
  top: 0;
  right: 0;
  margin: 8px 0;
}

.issues > li .right .yearLine {
  position: absolute;
  width: 20px;
  top: 2px;
  left: 10px;
  margin: 8px 0;
  border: solid 1px #ccc;
}
