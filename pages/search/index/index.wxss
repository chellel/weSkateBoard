/* pages/home/home.wxss */
@import "/templates/wePanel/wePanel.wxss";

page {
  height: 100%;
}

.weui-panel.weui-box-panel {
  margin: 10px;
  box-shadow: 2px 2px 10px 0px #ccc;
}

.weui-media-box {
  padding: 8px 15px;
}

.weui-media-box__hd:active, .weui-media-box:active weui-media-box__title {
  opacity: 0.6;
}

.weui-media-box__title {
  flex: 1;
  -webkit-flex: 1;
  -webkit-box-flex: 1;
  display: flex;
  align-items: center;
  font-weight: bold;
}

.weui-panel.weui-box-panel::before, .weui-panel.weui-box-panel::after {
  display: none;
}

.weui-media-box__desc {
  -webkit-line-clamp: 4;
  line-height: 2;
  color: #000;
}

.weui-box-panel .weui-panel__bd .weui-media-box__desc {
  height: auto;
}

.weui-media-box__info {
  margin-top: 5px;
  padding-bottom: 10px;
  color: #8590a6;
}

.weui-cell.weui-cell_readmore {
  justify-content: flex-end;
  font-size: 12px;
  padding: 0 15px;
}

.weui-cell__text {
  flex: 1;
  align-items: center;
  display: flex;
}

.weui-cell__ft {
  display: flex;
  justify-content: flex-end;
}

.weui-cell__ft icon {
  line-height: 35px;
}

.weui-media-box__hd {
  display: flex;
  align-items: center;
}

.weui-media-box__hd .avator {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.weui-cell__ft_in-access {
  margin-right: 0px;
}

.wxParse-em {
  color: #ed1b24;
}

.weui-panel-index .weui-media-box__title {
  font-size: 14px;
}

.weui-panel-index .weui-media-box__desc {
  display: flex;
  margin-left: 24rpx;
}

.weui-media-box__desc:active {
  opacity: 0.6;
  color: #ed1b24;
}

.weui-panel-index .weui-media-box__desc .weui-media-box__desc__title {
  max-width: 80%;
}

.weui-panel-index .weui-cell__ft {
  flex: 1;
}

.weui-panel-index .weui-cell_link {
  font-size: 12px;
}

.weui-panel-index .weui-cell__bd {
  display: flex;
}

.weui-media-box .weui-media-box__bd{
  width:100%;
}
