/* pages/home/home.wxss */

page {
  height: 100%;
}

.weui-panel.weui-box-panel{
  margin: 10px;
  box-shadow: 2px 2px 10px 0px #ccc;
}

view, scroll-view {
  padding: 0px;
  margin: 0px;
}
.scroll-h{
   overflow: auto;
}
.weui-navbar {
  border-bottom: solid 1px #eee;
  position: fixed;
background: #fff;
z-index: 100;
}

.swiper-box {
  padding-top: 41px;
}


.weui-navbar .weui-navbar__item {
  width: 25%;
  display: inline-block;
  padding: 8px 0;
}

.weui-navbar__title {
  font-size: 14px;
}

.weui-navbar__item.weui-bar__item_on {
  color: #ed1b24;
}

.weui-navbar__slider {
  background: #ed1b24;
  position: relative;
  height: 2px;
}

.scoll-h {
  height: 100%;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.weui-loadmore_line {
  margin-top: 2rem;
}

.weui-btn {
  top: 5px;
  margin-bottom: 15px;
  width: 100px;
  line-height: 2;
}

.selectedcolor {
  color: #ed1b24;
}

.img-content {
  padding: 5px;
  float: left;
  height: 200px;
  /*display:inline-block;*/
  box-sizing: border-box;
}

.img-content image {
  width: 100%;
  height: 100%;
}

.weui-panel__bd:after {
  content: " ";
  position: absolute;
  left: 5px;
  right: 5px;
  height: 1px;
  color: #d9d9d9;
}

.weui-media-box {
  padding: 8px 15px;
}

.weui-media-box__hd:active, .weui-media-box:active weui-media-box__title {
  opacity: 0.6;
}

.weui-panel-hd {
  display: flex;
  display: -webkit-flex;
}

.weui-media-box__title {
  flex: 1;
  -webkit-flex: 1;
  -webkit-box-flex: 1;
  display: flex;
  align-items: center;
  font-weight: bold;
}

/*.weui-media-box_tip {
  text-align: right;
  width: 30%;
  float: right;
  color: #c1c1c1;
  font-size: 12px;
}*/

.weui-panel::before, .weui-panel::after {
  display: none;
}

.weui-media-box__desc {
  -webkit-line-clamp: 4;
  line-height: 2;
  color: #000;
}

.weui-media-box__info {
  margin-top: 5px;
  padding-bottom: 10px;
  color: #8590a6;
}

.weui-cell.weui-cell_readmore {
  justify-content: flex-end;
  font-size: 12px;
  padding: 0 15px;
}

.weui-cell__text {
  flex: 1;
  align-items: center;
  display: flex;
}

.weui-cell__ft {
  display: flex;
justify-content:flex-end;
}

.weui-cell__ft icon {
  line-height: 35px;
}

.weui-media-box__hd {
  display: flex;
  align-items: center;
}

.weui-media-box__hd .avator {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.weui-cell__ft_in-access {
  margin-right: 0px;
}
.swiper-item .weui-media-box__bd{
  width:100%;
}
.swiper-view{
width: 100%;
height: 100%;
background-size: 100%; /*自适应宽度*/
-moz-background-size:100%;
}

.swiper-text-container{
  position: absolute;
bottom: 0px;
background-color: rgba(0,0,0,0.2);
width: 100%;
height: 40px;
line-height: 40px;
color: #fff;
}
.swiper-title{
  padding-left: 20px;
}